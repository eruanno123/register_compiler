addrmap itix_spi
{
    alignment=2;
    default regwidth=16;
    default hw=r;
    default sw=rw;

    enum CONFIG_MODE_encoding {
        DISABLE         = 2'b00 { desc = "SPI Peripheral is disabled."; };
        MASTER          = 2'b01 { desc = "SPI Peripheral operates in master mode."; };
        SLAVE           = 2'b10 { desc = "SPI Peripheral operates in slave mode."; };
    };

    reg
    {
        field
        {
            desc = "These bits control the peripheral mode.";
            /* add extra output in the RTL indicating the enable status */
            ored;
            encode=CONFIG_MODE_encoding;
        } MODE[2];
    } CONFIG;

    reg
    {
        field
        {

        } BUSY;
    } STATUS;

    reg
    {
        field
        {

        } TX_EMPTY_EN;

        field
        {

        } RX_FULL_EN;
    } INT_ENABLE;

    reg
    {
        field
        {

        } TX_EMPTY_FLAG;

        field
        {

        } RX_FULL_FLAG;
    } INT_FLAG;
};
