addrmap itix_i2c
{
    alignment=4;
    default regwidth=32;

    default hw=r;
    default sw=rw;

    reg
    {
        name = "I2C Configuration Register";

        field
        {
            desc = "This bit enables or disables the peripheral.";
        } ENABLE;
    } CONFIG;

    reg
    {
        default hw=w;
        default sw=r;

        field
        {
            desc = "This bit indicates that peripheral is busy.";
        } BUSY;
    } STATUS;

    reg
    {
        field
        {

        } ARB_LOST_EN;
    } INT_ENABLE;

    reg
    {
        field
        {

        } ARB_LOST_FLAG;
    } INT_FLAG;
 };
